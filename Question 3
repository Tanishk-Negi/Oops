#include <iostream>
#include <string>

using namespace std;
class customer
{
private:
    int Rno;
    string Name;
    float tariff;
    int NOD;

    float CALC()
    {
        float Amount;
        if (NOD * tariff > 10000)
        {
            Amount = 1.05 * NOD * tariff;
        }
        else
        {
            Amount = NOD * tariff;
        }
        return Amount;
    }

public:
    void Checkin(int room, string name, float tariff, int NOD)
    {
       this-> Rno = room;
        this->Name =Name;
       this->  tariff=tariff;
        this-> NOD=NOD;
    }

    void Checkout()
    {
        cout << "Name: " <<  this->Name << endl;
        cout << "Room Number: " <<  this->Rno << endl;
        cout << "Tariff per day: " <<  this->tariff << endl;
        cout << "Total Amount: " << CALC() << endl;
    }
};

int main()
{
	int nod;
	string name;
	float t;
	int r;
	customer c[3];
	
	
	for(int i=0;i<3;i++)
	{
	cout<<"ENter NAme:";
	cin>>name;
	cout<<"Enter number of days:";
	cin>>nod;
	cout<<"ENter tariff:";
	cin>>t;
	cout<<"ENter room no.:";
	cin>>r;
	c[i].Checkin(r,name,t,nod);
	c[i].Checkout();
	}
	
    return 0;
}
