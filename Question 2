#include <iostream>
#include <string>

using namespace std;

class Employee
{
private:
    int ID;
    string Name;
    float Salary;
    string CompanyName;

public:
    void setID(int id)
    {
        ID = id;
    }

    void setName(string n)
    {
        Name = n;
    }

    void setCompanyName(string companyname)
    {
        CompanyName = companyname;
    }

    void setSalary(float sal)
    {
        Salary = sal;
    }

    int getID()
    {
        return ID;
    }

    string getName()
    {
        return Name;
    }

    string getCompanyName()
    {
        return CompanyName;
    }

    float getSalary()
    {
        return Salary;
    }

    void showDetails()
    {
        cout << "Employee ID: " << ID << endl;
        cout << "Employee Name: " << Name << endl;
        cout << "Salary: " << Salary << endl;
        cout << "Company Name: " << CompanyName << endl;
    }
};

int main()
{
    Employee d1, d2;

    d1.setID(1000);
    d1.setName("Tanishk");
    d1.setSalary(1000000);
    d1.setCompanyName("TechCorp");

    d2.setID(2000);
    d2.setName("John Doe");
    d2.setSalary(1200000);
    d2.setCompanyName("Innova Solutions");

    d1.showDetails();
    d2.showDetails();

    return 0;
}
