#include <iostream>
#include <string>

using namespace std;

class Bill
{
private:
    string CustomerName;
    int EnergyConsumed;
    float TotalBill;

public:
    void setCustomerName(string n)
    {
        CustomerName = n;
    }

    void setEnergyConsumed(int e)
    {
        EnergyConsumed = e;
    }

    void setTotalBill(int e)
    {
        if(e <= 100)
        {
            TotalBill = e * 60 + 5000;
        }
        else if(e > 100 && e <= 300)
        {
            TotalBill = (100 * 60) + ((e - 100) * 80) + 5000;
        }
        else if(e > 300 && e <= 400)
        {
            int r = (100 * 60) + (200 * 80) + ((e - 300) * 90) + 5000;
            TotalBill = r + (15 * r / 100);
        }
        else
        {
            cout << "Energy consumption exceeds 400 units." << endl;
            TotalBill = 0;
        }
    }

    float getTotalBill()
    {
        return TotalBill;
    }
};

int main()
{
    Bill d1;
    d1.setCustomerName("Tanishk");
    d1.setEnergyConsumed(400);
    d1.setTotalBill(400);

    cout << "Total Bill for " << d1.getTotalBill() << endl;

    return 0;
}
